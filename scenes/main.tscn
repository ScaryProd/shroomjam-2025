[sub_resource type="GDScript" id="GDScript_sugp2"]
resource_name = "mainscript"
script/source = "extends Node2D

@onready var camera = $Camera2D
@onready var tvStatic = $tvStatic
@onready var channelpane  = $ChannelPane
@onready var audioChatter = $audioChatter
@onready var audioOff = $audioOff
@onready var tvOffLabel: Label = $TVOFF
@onready var ducksprite: Sprite2D = $Ducksprite
@onready var tvbackgroundnode: Node2D = $tvbackgroundnode
@onready var player: CharacterBody2D = $SubViewportContainer/SubViewport/World/Player
@onready var tv_off_screen: ColorRect = $tvOffScreen

var zoomout = true
var tweenIn
var tweenOut
var currentGlitch = 0
var currentChannel = 0
var channel1 = preload(\"res://assets/newsprites/channel1.png\")
var channel2 = preload(\"res://assets/newsprites/channel2.png\")
var channel3 = preload(\"res://assets/newsprites/channel3.png\")
@export var zoomamount: float

var plugged = true
var turnedOn = true
@export var duckscale = 0.01
@export var tvofftext = \"Was the TV turned off..?\"
@export var tvunpluggedtext = \"Did someone pull the plug..?\"

func _ready():
	zoomout = true
	currentGlitch = 0
	processZoom()
	player.connect(\"low_hp\", enableDuck)
	#ducksprite.visible = false

func _physics_process(delta: float) -> void:
	pass

func _on_btn_camera_click_end() -> void:
	zoomout = !zoomout
	processZoom()

func _on_glitchtimer_timeout() -> void:
	tvglitch()

func tvglitch() -> void:
	currentGlitch += 1
	match currentGlitch:
		1:
			tv_turned_off_event()
		2:
			tv_change_channel_event(1)
		3:
			tv_unplugged_event()
		4:
			tv_change_channel_event(2)
		5:
			tv_turned_off_event()
		6:
			tv_change_channel_event(3)
		7:
			tv_unplugged_event()
		8:
			tv_change_channel_event(1)
		9:
			tv_turned_off_event()
		10:
			tv_change_channel_event(2)

func processZoom() -> void:
	if zoomout:
		tweenOut = camera.create_tween()
		tweenOut.tween_property(camera, \"zoom\", Vector2(zoomamount,zoomamount),0.4)
		tweenOut.play()
	else:
		tweenIn = camera.create_tween()
		tweenIn.tween_property(camera, \"zoom\", Vector2(1,1),0.4)
		tweenIn.play()

func _on_tv_power_button_click_end() -> void:
	if currentChannel <= 0:
		turnedOn = !turnedOn
		if turnedOn:
			if plugged:
				$SubViewportContainer.visible = true
				$tvStatic.visible = true
			else:
				tvOffLabel.text = tvofftext
		else:
			if plugged:
				tvScreenOff()
			else:
				pass
		setCorrectLight()
		setCorrectOffLabel()

func _on_btn_channelup_click_end() -> void:
	fixChannel()

func _on_btn_channeldown_click_end() -> void:
	fixChannel()

func _on_btn_plug_click_end() -> void:
	plugTV()

func plugTV():
	plugged = !plugged
	if currentChannel <= 0:
		if plugged and turnedOn:
			$SubViewportContainer.visible = true
			$tvStatic.visible = true
		elif !plugged:
			unPlugTV()
		setCorrectLight()
		setCorrectOffLabel()

func tv_turned_off_event():
	if currentChannel <= 0:
		tvScreenOff()
		turnedOn = false
		setCorrectLight()
		setCorrectOffLabel()

func tv_change_channel_event(channelNumber):
	$SubViewportContainer.visible = false
	channelpane.visible = true
	currentChannel = channelNumber
	var channeltexture
	match currentChannel:
		1:
			channeltexture = channel1
		2:
			channeltexture = channel2
		3: 
			channeltexture = channel3
	channelpane.texture = channeltexture
	audioChatter.play()

func tv_unplugged_event():
	unPlugTV()
	if currentChannel <= 0:
		tvbackgroundnode.unPlugTV()
		audioOff.play()

func unPlugTV():
	if currentChannel <= 0:
		plugged = false
		tvScreenOff()
		setCorrectLight()
		setCorrectOffLabel()

func setCorrectLight():
	if plugged == false:
		tvbackgroundnode.setPowerLight(\"black\")
	elif plugged and !turnedOn:
		tvbackgroundnode.setPowerLight(\"red\")
	elif plugged and turnedOn:
		tvbackgroundnode.setPowerLight(\"green\")

func _on_btn_rightantenna_click_end() -> void:
	fixChannel()

func _on_btn_leftantenna_click_end() -> void:
	fixChannel()

func fixChannel():
	if currentChannel > 0:
		currentChannel = 0
		$SubViewportContainer.visible = true
		channelpane.visible = false

func setCorrectOffLabel():
	if plugged == false:
		tvOffLabel.text = tvunpluggedtext
	else:
		tvOffLabel.text = tvofftext

func enableDuck():
	ducksprite.visible = true

func _on_button_pressed() -> void:
	#the duck button
	player.healPlayer(1)

	# original size: 630 x 350
	# target: 630 x 20
	# original pos: -314 x -177
	# target: -314 x -10

var tvOffTween

func tvScreenOff():
	tv_off_screen.size = Vector2(630,350)
	tv_off_screen.position = Vector2(-314,-177)
	tv_off_screen.modulate = Color(255, 255, 255, 255)
	$SubViewportContainer.visible = false
	$tvStatic.visible = false
	audioOff.pitch_scale = randf_range(0.8,0.95)
	audioOff.play()
	
	tvOffTween = create_tween()
	# set parallel so shrinking and lowering happen at the same time
	tvOffTween.set_parallel(true)
	tvOffTween.tween_property(tv_off_screen, \"size\", Vector2(630,20),0.2)
	tvOffTween.tween_property(tv_off_screen, \"position\", Vector2(-314,-10),0.2)
	# unset parallel so next step happens only on tween completion
	# call next tween on tween completion
	
	# set parallel so shrinking, centering and dimming happen at the same time
	tvOffTween.chain().tween_property(tv_off_screen, \"size\", Vector2(20,20),0.2)
	tvOffTween.tween_property(tv_off_screen, \"position\", Vector2(-10,-10),0.2)
	tvOffTween.tween_property(tv_off_screen, \"modulate\", Color(255, 255, 255, 0), 0.2)
	tvOffTween.chain().tween_property($tvStatic, \"visible\", false, 0.1)
	tvOffTween.play()
	
	# unset parallel so next step happens on tween completion
	#tvOffTween.tween_property($tvStatic, \"visible\", false, 0.1)
	# add tween play call to tween 1
	# call tween
	
	

	
"

